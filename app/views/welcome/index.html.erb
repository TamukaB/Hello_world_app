<!DOCTYPE html>
<html>
<head>
    <title>Test Application</title>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Include Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Include Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Include the main stylesheet -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>

    <!-- Importmap should be loaded before any other JavaScript -->
    <%= javascript_importmap_tags %>  <!-- This line must come before Bootstrap JS or other script tags -->
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"></a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <%= link_to 'Home', root_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'Posts', posts_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                    <%= link_to 'New Post', new_post_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#games" data-toggle="modal" data-target="#gamesModal">Games</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#contact" data-toggle="modal" data-target="#contactModal">Contact</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4 text-left">
        <h1>Hello World! Welcome to my application.</h1>
        <p>Created by Tamuka Bungwe</p>
    </div>

    <% flash.each do |key, message| %>
        <div class="alert alert-<%= key %>"><%= message %></div>
    <% end %>

    <!-- Modal for Contact Form -->
    <div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="contactModalLabel">Contact Us</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea class="form-control" id="message" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Games -->
    <div class="modal fade" id="gamesModal" tabindex="-1" role="dialog" aria-labelledby="gamesModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="gamesModalLabel">Choose a Game</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <select id="gameSelector" class="form-control">
                        <option value="">Select a Game</option>
                        <option value="/games/game1">Game 1</option>
                        <option value="/games/game2">Game 2</option>
                        <option value="/games/game3">Game 3</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="playGameButton" class="btn btn-primary">Play Game</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Yield for dynamic content -->
    <%= yield %>
    </div>

    <!-- Include Bootstrap JS and dependencies -->
    <!-- Make sure these are loaded after importmap_tags -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        document.getElementById('playGameButton').addEventListener('click', function() {
            var selectedGame = document.getElementById('gameSelector').value;
            if (selectedGame) {
                window.location.href = selectedGame; // Redirects to the selected game
            }
        });
    </script>
</body>
</html>
